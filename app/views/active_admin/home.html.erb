<div style="margin-top: -30px;">
<div style="float: right; margin-top: 70px;">
<%= button_to "Add new project", url_for(controller: 'projects', action: 'new'),method: :get,class: 'round-button' %>
</div>
<br>

<div class="page-header">
  <h1>Projects <small>@<%=current_admin.email%></small></h1>
</div>

<% @projects.each do |p| %>
	<div class="panel panel-default project-panel">
		<div class="panel-heading">
			<h2 class="project-name"><%=p.name.capitalize%></h2>
		</div>
			<ul class="list-group">
	    		<li class="list-group-item"><p class="h4 u">Description</p><p class="lead" style="overflow-wrap: break-word;"><%=p.desc%></p></li>
			    <li class="list-group-item"><p class="h4 u">Category</p><%=p.category%></li>
			    <li class="list-group-item"><p class="h4 u">Limit</p><%=p.limit%></li>
			    <li class="list-group-item"><p class="h4 u">Seats Filled</p>
			    	<div class="progress">
  						<div class="progress-bar progress-bar-striped active" role="progressbar"  aria-valuenow = "5" aria-valuemin="0" aria-valuemax="5">
    						<%=Random.new.rand(0..5)%>
  						</div>
					</div>
				</li>        
	  			<li class="list-group-item"><p class="h4 u">Students</p><%p.users.each do |u|%><%=u.email%>,&nbsp;<%end%></li>    
	  		</ul>
	  	<div class="panel-footer">
	  		<%= link_to "Edit this Project", url_for(controller: "projects", action: "edit", id: p.id), method: :get ,class:'btn btn-small edit'%>
			<%= link_to "Delete this Project", url_for(controller: "projects", action: "destroy", id: p.id), method: :delete ,class:'btn btn-small danger',data: {confirm: "Are you sure?"}%>
	  	</div>
	</div>
	
<%end %> 
</div>
<style type="text/css">
	.round-button{
		height: 40px;
		width: auto;
		border: 2px solid #75b5c4;
		border-radius: 50px;
		background-color: #75b5c4;
		color:white;
		font-weight: bold;
		outline: none;
	}
	.round-button:hover{
		background-color: #75b5c4;
		border: 1px solid #75b5c4;
	}
	.danger{
		color:red;
	}
	.danger:hover{
		color: red;
		font-weight: bold;
	}
	.edit{
		color:blue;
	}
	.edit:hover{
		color:blue;
		font-weight: bold;
	}
	.u{
		font-weight: bold;
	}
	.project-name{
		font-family: 'Fira Sans',serif;
	}
</style>
<script type="text/javascript">
	$(document).ready(function() {
		var width = 3*100/5;
		$('.progress-bar').css('width',width+"%");
	});
</script>